/**home.wxss**/
.announcement .announce_img {
  padding: 5rpx;
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
  position: relative;
  float: left;
}

.announcement .news {
  font-size: small;
  text-decoration: underline;
  color:dimgray;
  float: left;
  padding: 8rpx;
}
.buttons {
  margin-left: 60rpx; 
  margin-right: 60rpx;
  margin-top: 30rpx;
  margin-bottom: 300rpx;
}
.buttons .button {
  background-color: #FFD520;
  padding-left: 12rpx;
  padding-right: 12rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.buttons .buttonImg {
  padding: 8rpx;
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
}
.buttons .buttonText {
  padding: 8rpx;
  height: 40rpx;
  vertical-align: middle;
}

.swiper-container{
  position: relative;
  margin-left: 60rpx; 
  margin-right: 60rpx;
 }

 .swiper-container .swiper{
  height: 300rpx;
 }
 .swiper-container .swiper .img{
  width: 100%;
  height: 100%;
 }

.nav{
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction:row;
  padding-top: 20px;
}

.default{
  line-height:100rpx;
  text-align:center;
  flex:1;
  border-right:none;
  color:#5d5d5d;
  font-size:28rpx;
}

.red{
  line-height:100rpx;
  text-align:center;
  color:#E03A3E;
  flex:1;
  border-right:none; 
  border-bottom: 4rpx solid #E03A3E;
  font-size:28rpx;
}

.show{
  display:block;
  text-align:center;
  line-height:200rpx;
}

.hidden{
  display:none;
  text-align:center;
  line-height:200px;
}