.nav{
  width:100%;
  height:100rpx;
  display:flex;
  flex-direction:row;
  padding-top: 20px;
}

.default{
  line-height:100rpx;
  text-align:center;
  flex:1;
  border-right:none;
  color:#5d5d5d;
  font-size:28rpx;
}

.red{
  line-height:100rpx;
  text-align:center;
  color:#E03A3E;
  flex:1;
  border-right:none; 
  border-bottom: 4rpx solid #E03A3E;
  font-size:28rpx;
}

.show{
  display:block;
  text-align:left;
  line-height:80rpx;
  margin-left: 10px;
}

.hidden{
  display:none;
  text-align:center;
  line-height:80rpx;
}

.policy{
  text-decoration: underline;
}

.trailer{
  margin-top: 2%;
  margin-left: 7%; 
  margin-right: 7%; 
  height: 180px;
  width: 320px;
  position:relative;
}

.trailer .trailer_bg{
  position: absolute;
  border-radius: 15px;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.trailer .title_case{
  position: absolute;
  background-color:ghostwhite;
  opacity: 90%;
  height: 20%;
  width: 100%;
  bottom: 0;
}

.trailer .title{
  position: absolute;
  top: -10%;
  width: 95%;
  text-align: center;
  font-weight: bold;
  font-size: large;
}

.text{
  position: relative;
  margin-left: 10%;
  margin-right: 10%;
}

swiper {
  width: 100%;
  height: 400rpx;
}

/* 设置轮播图图片属性 */
swiper-item image {
  width: 100%;
  height: 100%;
}