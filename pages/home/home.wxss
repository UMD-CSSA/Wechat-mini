/**home.wxss**/
.announcement .announce_img {
  padding: 5rpx;
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
  position: relative;
  float: left;
}

.announcement .news {
  font-size: small;
  text-decoration: underline;
  color:dimgray;
  float: left;
  padding: 8rpx;
}
.buttons {
  margin-left: 60rpx; 
  margin-right: 60rpx;
  margin-top: 30rpx;
  margin-bottom: 300rpx;
}
.buttons .button {
  background-color: #FFD520;
  padding-left: 12rpx;
  padding-right: 12rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.buttons .buttonImg {
  padding: 8rpx;
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
}
.buttons .buttonText {
  padding: 8rpx;
  height: 40rpx;
  vertical-align: middle;
}

.swiper-container{
  position: relative;
  margin-left: 60rpx; 
  margin-right: 60rpx;
 }

 .swiper-container .swiper{
  height: 300rpx;
 }
 .swiper-container .swiper .img{
  width: 100%;
  height: 100%;
 }

.trailer{
  margin-left: 10%; 
  margin-right: 10%; 
  height: 200px;
  width: 80%;

}

.trailer .trailer_bg{
  position: absolute;
  border-radius: 15px;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.trailer .title_case{
  position: absolute;
  background-color:ghostwhite;
  opacity: 90%;
  height: 17%;
  width: 100%;
  font-size:large;
}

.trailer .title{
  position: absolute;
  top: 15%;
  width: 95%;
  left: 5%;
}
