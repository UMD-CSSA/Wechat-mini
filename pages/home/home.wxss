}
.buttons {
  margin-left: 60rpx; 
  margin-right: 60rpx;
  margin-top: 30rpx;
  margin-bottom: 300rpx;
}
.buttons .button {
  background-color: #FFD520;
  padding-left: 12rpx;
  padding-right: 12rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
