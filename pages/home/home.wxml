<view class="announcement">
  <button style="background-color:moccasin; width: 100%; height: 50rpx; padding: 0;">
    <image src="/pages/home/images/通知.png" class="announce_img"></image>
    <text bindtap="news" class="news">提醒在美中国公民和机构注意美社会治安和反恐形势</text>
  </button>
</view>

<view class="swiper-container" style="margin: 6%;">
 <swiper autoplay="auto" interval="3000" duration="500" current="{{swiperCurrent}}" bindchange="swiperChange" class="swiper" indicator-dots="true">
  <block wx:for="{{slider}}" wx:key="unique">
   <swiper-item>
    <image src="{{ item.img }}" class="img" mode="aspectFill"></image>
   </swiper-item>
  </block>
 </swiper>
</view>

<view class='buttons'>
    <button class='button' style="width: 48%; height: 50%; float: left" bindtap="manual">
      <image class='buttonImg' src="../../images/新生手册.png"></image>
      <text class="buttonText">新生系列</text>
    </button>
    <button class='button' style="width: 48%; height: 50%; float: right">
      <image class='buttonImg' src="../../images/红龟卡.png"></image>
      <text class="buttonText">红龟卡</text>
    </button>
    <button class='button' style="width: 48%; height: 50%; float: left" bindtap="renting">
      <image class='buttonImg' src="../../images/周边租房.png"></image>
      <text class="buttonText">周边租房</text>
    </button>
    <button class='button' style="width: 48%; height: 50%; float: right" bindtap="cssa">
      <image class='buttonImg' src="../../images/CSSA构成.png"></image>
      <text class="buttonText">CSSA构成</text>
    </button>
</view>

<view>
  <view class='trailer' style="position:relative;" bindtap="trailer1">
    <image class='trailer_bg' src="/pages/home/images/Trailer1.jpeg"></image>
    <view class='title_case' style="position: absolute; bottom: 0;">
      <text class='title'>2022虎年DC七校元宵晚会</text>
    </view>
  </view>
</view>

